{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],

  "packageRules": [
    {
      "matchPaths": ["Ansible/**"],
      "matchDatasources": ["github-tags", "github-releases"],
      "matchPackageNames": ["*"],
      "matchFiles": ["**/*.tar", "**/*.tar.gz", "**/*.tar.bz2", "**/*.tar.xz"],
      "enabled": true
    },
    {
      "matchPaths": ["Ansible/**"],
      "matchDatasources": ["git-tags", "git-refs"],
      "matchPackageNames": ["*"],
      "matchFiles": ["**/*.tar", "**/*.tar.gz", "**/*.tar.bz2", "**/*.tar.xz"],
      "enabled": true
    }
  ]
}
